@import "nib"

global-reset()

content_width = 710px
black = #000000
blue = #005fac

body
	background-color: white
	font-family: 'BandaRegularRegular', Helvetica, Arial, sans-serif
	background-image: url('../img/bg.jpg')
	background-position: 50% top
	background-repeat: repeat-y
	background-attachment: fixed

.wrapper
	position: relative
	width: content_width
	margin: 0 auto

header.top
	position: relative
	color: black
	height:285px
	height: 255px;
	background: rgba(255,255,255,0.7) ;

	.logo
		display:block
		width: 111px
		height: 50px
		background-image: url('../img/logo.png')
		absolute: right 3px top 38px

	h1
		display: block
		font-size: 44px
		padding-top: 25px
		line-height: 100%
		margin-bottom: 10px;
		padding-bottom: 10px;
		font-family: 'BandaSemiboldSemiBold', Helvetica, Arial, sans-serif
		border-bottom: solid 2px #000
		width: 470px;

	h2
		absolute: left 100px
		margin-top: 22px 
		display: block
		padding-top: 7px
		font-size: 22px
		line-height: 125%
		font-weight: normal

	.hash
		absolute: right 6px top 180px
		font-size: 38px
		font-weight: bold
		font-family: 'BandaRegularRegular', Helvetica, Arial, sans-serif

	.iphone
		display: block
		width: 77px
		height: 96px
		background-image: url('../img/iphone.png')
		position: absolute
		left: 1px
		top: 145px

	.steps
		width: 810px
		margin: auto
		margin-top: 130px
		padding-top: 20px
		background: url("../img/border.png") repeat-x 0 0px
		
		ul
			clearfix()
			list-style: none
			display: block
			height: 48px

			li
				font-family: 'BandaSemiboldSemiBold', Helvetica, Arial, sans-serif
				font-size 16px
				color: #333
				margin-top: 10px
				line-height: 28px
				display: block
				float: left

				&.n1
					margin-left: 16px
					width: 260px

				&.n2
					width: 218px

				&.n3
					width: 186px

				b
					color: white
					display: block
					width: 28px
					height: 28px
					background-color: black
					border-radius: (@width / 2)
					line-height: (@height)
					text-align: center
					float: left
					margin-right: 10px

#feed
	clearfix()

	width: content_width +16px
	margin-left: -8px
	margin-top: 70px

	a
		overflow: hidden
		position: relative
		display: block
		float: left
		width: 220px
		height: 220px
		padding: 3px
		background-color: white
		border-radius: 3px
		margin: 8px
		color: white
		text-decoration: none			

		img, .info
			absolute: top 3px left 3px
			width: 220px
			height: 220px

		.info
			display: none
			background-color: rgba(0, 0, 0, 0.6)

			.from, .caption
				padding: 5px

		&:hover .info
			display: block