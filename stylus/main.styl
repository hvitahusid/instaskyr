@import "nib"

global-reset()

content_width = 710px

blue = #005fac

body
	background-color: white
	font-family: 'BandaRegularRegular', Helvetica, Arial, sans-serif

	background-image: url('../img/bg.jpg')
	background-position: 50% top
	background-repeat: repeat-y
	background-attachment: fixed

.wrapper
	//width: 810px
	position: relative
	width: content_width
	margin: 0 auto

header.top
	position: relative
	color: white
	height:285px

	.logo
		display:block
		width: 111px
		height: 50px
		background-image: url('../img/logo.png')
		absolute: right 3px top 38px

	h1
		display: block
		font-size: 35px
		padding-top: 60px
		line-height: 100%
		font-family: 'BandaSemiboldSemiBold', Helvetica, Arial, sans-serif

	h2
		display: block
		padding-top: 7px
		font-size: 20px
		line-height: 125%
		font-weight: normal

	.hash
		absolute: right 6px top 160px
		font-size: 28px
		font-family: 'BandaSemiboldSemiBold', Helvetica, Arial, sans-serif

	.steps
		background-color: rgba(255, 255, 255, 0.5)
		margin-top: 40px

		ul
			clearfix()
			list-style: none
			display: block
			height: 48px

			li
				font-family: 'BandaSemiboldSemiBold', Helvetica, Arial, sans-serif
				font-size 16px
				color: #333
				margin-top: 10px
				line-height: 28px
				display: block
				float: left

				&.n1
					margin-left: 16px
					width: 166px

				&.n2
					width: 246px

				&.n3
					width: 274px

				b
					color: white
					display: block
					width: 28px
					height: 28px
					background-color: blue
					border-radius: (@width / 2)
					line-height: (@height)
					text-align: center
					float: left
					margin-right: 10px

#feed
	clearfix()

	width: content_width + 16px
	margin-left: -8px

	a
		overflow: hidden
		position: relative
		display: block
		float: left
		width: 220px
		height: 220px
		padding: 3px
		background-color: white
		border-radius: 3px
		margin: 8px
		color: white
		text-decoration: none			

		img, .info
			absolute: top 3px left 3px
			width: 220px
			height: 220px

		.info
			display: none
			background-color: rgba(0, 0, 0, 0.6)

			.from, .caption
				padding: 5px

		&:hover .info
			display: block


